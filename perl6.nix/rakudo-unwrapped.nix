{ stdenv, fetchgit, git, perl, nqp, makeWrapper }:
stdenv.mkDerivation rec {
  name = "rakudo-unwrapped-${version}";
  # <AUTOGENERATED> -- see update-perl6-git-package.p6
  version = "2019.03.1-582-gc0c99e77c";
  src = fetchgit {
    url = "git://github.com/rakudo/rakudo";
    rev = "c0c99e77c70de27d34e9a9275adb174e331850a5";
    sha256 = "1xmpbf0cl5zcqbg419zkdnxzq6rajcf1scyfmzj5snsarlqns7jm";
    fetchSubmodules = true;
  };
  # </AUTOGENERATED>

  buildInputs = [ perl nqp makeWrapper git ];
  preConfigure = "echo ${version} > tools/templates/VERSION";
  configureScript = "perl ./Configure.pl";
  configureFlags =
    [ "--backends=moar"
      "--with-nqp=${nqp}/bin/nqp"
    ];

  meta = with stdenv.lib; {
    description = "A Perl 6 implementation";
    homepage    = https://www.rakudo.org;
    license     = licenses.artistic2;
    platforms   = platforms.unix;
    maintainers = with maintainers; [ kazcw ];
  };
}
